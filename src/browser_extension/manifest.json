{
  "manifest_version": 3,
  "name": "URL Safety Detector",
  "version": "1.0.0",
  "description": "Real-time malicious URL detection using heuristic analysis",
  "author": "UWU/CST/21/083",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "URL Safety Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}